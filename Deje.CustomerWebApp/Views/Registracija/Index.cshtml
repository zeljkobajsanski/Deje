@using Deje.Core.Status
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Deje - Registracija</title>
    <link href="@Url.Content("~/Content/Css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Css/login.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
</head>
<body>
    <div>
        <div class="container" style="width: 320px;">
            @using (@Html.BeginForm("Index", "Login", FormMethod.Post, new{@class = "form-horizontal"}))
            {
                <fieldset>
                    <legend><img src="@Url.Content("~/Content/Images/logo.png")" alt="Logo"/></legend>
                    <div class="control-group">
                        <label class="control-label" for="KorisnickoIme">Korisničko ime</label>
                    </div>
                    
                    <input type="submit" value="Prijavi me" class="btn btn-success"/>
                    @if (TempData["Status"] != null)
                    {
                        var status = ((StatusMessage) TempData["Status"]).Message;
                        <p style="clear: right; padding-top: 15px;" class="text-error">@status</p>    
                    }
                    
                </fieldset>
            }
        </div>
    </div>
</body>
</html>
